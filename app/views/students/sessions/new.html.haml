.form-wrapper
  .form-container
    %h2 生徒のログイン
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label :email 
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "default-form"

      .field
        = f.label :password 
        = f.password_field :password, autocomplete: "current-password", class: "default-form"

      .field
        %label 教室コード
        %input{name: "classroom_code", class: "default-form"}

      -if devise_mapping.rememberable? 
        .field-check
          = f.check_box :remember_me 
          = f.label :remember_me 

      .actions
        = f.submit "ログイン" , class: "default-form default-btn"

    -# = render "students/shared/links" 
