- breadcrumb :classroom, @classroom
=render "layouts/breadcrumbs"  
.cm-container  
  .main-content
    %h1.page-title=@classroom.name
    .mb-3.p-3
      = link_to '新規生徒登録', new_classroom_student_path(@classroom), class: 'btn btn-primary'
      -if @students.present?
        .table-responsive
          %table.table.table-hover
            %tbody
              -@students.each do |student|
                %tr
                  %td=student.name
                  %td=student.email
                  %td.btn-td
                    =link_to '編集', edit_student_path(student), class:'btn btn-warning' 
                    =link_to '削除', student_path(student), method: :delete, data: { confirm: "「#{student.name}」を削除します。よろしいですか？"}, class: 'btn btn-danger'



