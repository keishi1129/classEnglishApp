.form-wrapper
  .form-container
    %h2 先生の新規登録
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource 

      .field
        = f.label :name 
        = f.text_field :name, autofocus: true, autocomplete: :name, class: "default-form"

      .field
        = f.label :email 
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "default-form"

      .field
        = f.label :password 
        = f.password_field :password, autocomplete: "new-password", class: "default-form" 

      .field
        = f.label :password_confirmation 
        = f.password_field :password_confirmation, autocomplete: "new-password", class: "default-form"
      

      .actions
        = f.submit "新規登録", class: "default-form default-btn"
      

    = render "teachers/shared/links" 
