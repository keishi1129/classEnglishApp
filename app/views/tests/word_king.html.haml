.main-content
  #timer
  .margin-0-auto
    %h1 単語王チャレンジ
    .start-btn{"data-words-length": @words.length}
      %button{class: "btn btn-primary"} START
    -@words.each do |word|
      .word-test
        =render partial: 'cardsets/word-card', locals: {word: word, words: @words_shadow}
        .select-answers
          %button.selector=@other_words[rand(0...@other_words.length)].meaning
          %button.selector=@other_words[rand(0...@other_words.length)].meaning
          %button.selector=@other_words[rand(0...@other_words.length)].meaning
          %button.selector=@other_words[rand(0...@other_words.length)].meaning
          %button.next 次の問題

    .answer-rate
      -# =link_to 'スコアを提出する', success_or_fail_user_tests_path, class: "score-input nav-link mb-3"
      =link_to "単語力詳細へ", admin_user_mypage_path, class: "nav-link mb-3"
      %table.table.table-hover
        %thead.thead-default
          %tr
            %th 単語
            %th 正解
            %th あなたの解答
        %tbody
          -@words.each do |word|
            %tr
              %td=word.name
              %td=word.meaning
              %td.your-answer